{
  "name": "kerome-workspace",
  "private": true,
  "version": "0.0.0",
  "description": "kerome is a library for developing browser extensions, offering convenient communication mechanisms and APIs.",
  "main": "dist/index.js",
  "scripts": {
    "build": "run-p build:kerome",
    "build:kerome": "cd kerome && npm run build",
    "build:tools": "run-p build:tools:namespace-to-module",
    "build:tools:namespace-to-module": "cd tools/namespace-to-module && npm run build",
    "dev": "tsc -w",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint -- --fix",
    "extensions": "run-s extensions:build extensions:dev",
    "extensions:dev": "run-p extension:dev:*",
    "extensions:build": "run-p extension:build:*",
    "extension:dev:basic": "cd extensions/basic && npm run dev",
    "extension:build:basic": "cd extensions/basic && npm run build",
    "test": "run-s build playwright",
    "test:ui": "run-s build playwright:ui",
    "playwright": "playwright test",
    "playwright:ui": "playwright test --ui"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ermine-js/kerome.git"
  },
  "keywords": [
    "Chrome",
    "Extension",
    "Web",
    "kerome",
    "bridge"
  ],
  "author": "banyudu <banyudu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ermine-js/kerome/issues"
  },
  "homepage": "https://github.com/ermine-js/kerome#readme",
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/chrome": "^0.0.250",
    "@types/lodash-es": "^4.17.11",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}
